<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CambiarPassActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textViewCambiarPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="Al presionar el boton se le enviara un correo para cambiar su contraseña"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Cambiar Contraseña"
        app:layout_constraintEnd_toEndOf="@+id/textViewCambiarPass"
        app:layout_constraintStart_toStartOf="@+id/textViewCambiarPass"
        app:layout_constraintTop_toBottomOf="@+id/textViewCambiarPass" />

    <Button
        android:id="@+id/buttonCancelarchangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Cancelar"
        app:layout_constraintEnd_toEndOf="@+id/buttonChangePass"
        app:layout_constraintStart_toStartOf="@+id/buttonChangePass"
        app:layout_constraintTop_toBottomOf="@+id/buttonChangePass" />
</androidx.constraintlayout.widget.ConstraintLayout>